@page
@model Lab11.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a> | 
    <a asp-page="AddCourse">Add Course</a> | 
    <a asp-page="DeleteCourse">Delete Course</a> |
    <a asp-page="UpdateCourse">Update Course</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Games[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Games) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GamesId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GamesId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GamesId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GamesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
