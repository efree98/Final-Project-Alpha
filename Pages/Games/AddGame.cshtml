@page
@model AddGameModel

@{
    ViewData["Title"] = "Add Course";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Publisher.PublisherId" class="control-label"></label>
                <select asp-for="Publisher.PublisherId" asp-items="Model.GamesDropDown" class="form-control">
                    <option value="">--Select Game--</option> 
                </select>
                <span asp-validation-for="Publisher.PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher.Publishing_Company" class="control-label"></label>
                <input asp-for="Publisher.Publishing_Company " class="form-control" />
                <span asp-validation-for="Publisher.Publishing_Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Course" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}